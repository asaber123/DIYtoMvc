@model DIYtoMvc.Models.CommmentsModel
@{
    ViewData["Title"] = "Test-data";

}
<main>
    <!-- Här är citat delen som skiljer sig från de olika sidorna med hjälp av klasser -->
    <section class="main-quote">
        <blockquote class="about">
            @* <h1>Test-data:@ViewBag.session </h1> *@
        </blockquote>
    </section>
    <!-- Gör en div på innehåller för att styra positionen via flex -->
    <section class="main-content-test">

        <partial name="_CommentForm" />

        <div class="comments-div">
            <h2>Comments</h2>
            @if(ViewBag.comments != null){
                @foreach (var item in ViewBag.comments)
                {
                    <div class="comment">
                        <b>@item.Name</b>
                        <p>@item.Comment</p>
                        <b>@item.Theme</b>
                        <b>@item.Member</b>
                        <b>@item.Interests</b>

                    </div>
                }
            }

        </div>
    </section>
</main>