@model List<DIYtoMvc.Models.CommmentsModel>

@{
    ViewData["Title"] = "Test-data";

}
<main>
    <!-- Här är citat delen som skiljer sig från de olika sidorna med hjälp av klasser -->
    <section class="main-quote">
        <blockquote class="about">
            <h2>Comments from view model:</h2>
        </blockquote>
    </section>
    <!-- Gör en div på innehåller för att styra positionen via flex -->
    <section class="main-content-test">
        <div class="comments-div">
            @if(Model != null)
            {
                @foreach (var comment in Model)
                {
                    <div class="comment-view">
                        <div class="comment-info">
                            <b>@comment.Name</b>
                            <i>@comment.Theme</i>
                            @if(comment.Member != "false") {<b> @comment.Member</b>}
                            <i>Age: @comment.Age </i>
                        </div>
                        <div class="comment-text">
                            <b>Comment:</b>
                            <p>@comment.Comment</p>
                        </div>

                    </div>
                }
            }
            </div>

    </section>
          <partial name="_Widgets" />

</main>