<!DOCTYPE html>
<html lang="sv-se">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hemsedal-diy - @ViewData["Title"]</title>
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/reset.css" rel="stylesheet" type="text/css" />
    <!-- favicon -->
    <link rel="favicon" href="~/img/favicon.ico">


    <!-- Jquery cdn som används för plug in bildspel och toggle bar -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <!-- Här länkar jag olika fonts som skall användas -->
    <!-- font-family: 'Montserrat', sans-serif;
    font-family: 'Nunito Sans', sans-serif; -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,500;0,700;1,300&family=Nunito+Sans&display=swap"
        rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,wght@0,400;0,700;1,400&display=swap"
        rel="stylesheet">


</head>

<body>
    <header>
        <div class="header-content">
            <!-- Logga -->
            <div class="logo">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/img/diy.png" alt="Hemsedal-diy logga" />
                </a>
            </div>
            <nav class="nav">
                <!-- Här är kod som används för "toogle-bar"/Hamburger menyn -->
                <a href="#" class="toggle-button" onclick="toggleFunction()">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                </a>
                <!-- Här är huvudmenyn -->
                <div class="navbar">
                    <ul>
                        <li>
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li>
                            <a asp-controller="About" asp-action="Index">About</a>
                        </li>
                        <li>
                            <a asp-controller="Testdata" asp-action="Index">TestData</a>
                        </li>

                        <li>
                            <a asp-controller="Comments" asp-action="Index">Comments</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <!-- Största bilden som syns högst upp på sidan -->
            <div class="home-picture">
                <img src="~/img/diy1.jpg" alt="team-medlemmar" />
            </div>
        </div>
    </header>
    @RenderBody()
    <footer>
        <!-- Här är alla widgets som skall läggas vid sidan av varandra och som är länkade ifrån elfsight och google maps -->



        </div>
        <!-- Copywite och kontaktinformation längst ner på sidan -->
        <div class="copywrite">
            Copywrite 2020 <a href="#">Hemsedal diy.</a> Website designed & developed by<a href="#"> Åsa Berglund</a>
        </div>
    </footer>
    <!-- script fil för toggle-bar -->
    <script src="~/js/script.js"></script>
</body>

</html>
